sno=int(input("enter student number:"))
name=input("enter student name:")
group=input("enter student's group:")
s1=int(input("enter data science marks:"))
s2=int(input("enter computer marks:"))
s3=int(input("enter stat marks:"))
total=s1+s2+s3
avg=total/3
print("Sno:",sno,"\nSname:",name,"\nGroup:",group,"\ntotal:",total,"\nAverage:",avg)
