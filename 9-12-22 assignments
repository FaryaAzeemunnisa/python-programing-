n=int(input())
k=1
for i in range (1,n+1):
    for j in range(1,i+1):
        print(k,end=' ')
    print()
    k=k+1
    
*****************************

n=int(input())
for i in range (n,0,-1):
    for j in range(1,i+1):
        print(j,end=' ')
    print()
    
